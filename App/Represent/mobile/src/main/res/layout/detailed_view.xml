<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailedView">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/detailedImageView"
        android:adjustViewBounds="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/barbara_lee_120"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative"
        android:id="@+id/detailedType"
        android:layout_alignTop="@+id/detailedImageView"
        android:layout_toEndOf="@+id/detailedImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="California 13th District"
        android:id="@+id/detailedLocation"
        android:layout_below="@+id/detailedType"
        android:layout_alignStart="@+id/detailedType"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Democratic Party"
        android:id="@+id/detailedParty"
        android:layout_below="@+id/detailedLocation"
        android:layout_alignStart="@+id/detailedLocation"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Term ends: January 3, 2017"
        android:id="@+id/term_ends"
        android:layout_below="@+id/detailedParty"
        android:layout_alignStart="@+id/detailedParty"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committees"
        android:id="@+id/committees"
        android:layout_below="@+id/detailedImageView"
        android:layout_alignStart="@+id/detailedImageView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="18dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/list_committees"
        android:layout_below="@+id/committees"
        android:layout_alignStart="@+id/committees" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        android:id="@+id/bills"
        android:layout_below="@+id/list_committees"
        android:layout_alignStart="@+id/detailedImageView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="18dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/list_bills"
        android:layout_below="@+id/bills"
        android:layout_alignStart="@+id/bills" />

</RelativeLayout>
